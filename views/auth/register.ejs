<!-- Register Page Container -->
<div class="auth-page-container">
    <div class="auth-layout">
        <!-- Left Side - Registration Form -->
        <div class="auth-form-section">
            <div class="auth-form-container">
                <!-- Brand Logo -->
                <div class="auth-brand">
                    <div class="brand-logo">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h1 class="brand-name">JooCourses</h1>
                </div>

                <!-- Form Header -->
                <div class="form-header">
                    <h2 class="form-title">Create Your Account</h2>
                    <p class="form-subtitle">Join thousands of learners and start your journey today</p>
                </div>

                <!-- Registration Form -->
                <form id="register-form" action="/register" method="POST" class="modern-form" novalidate>
                    <!-- Name Field -->
                    <div class="input-group">
                        <div class="input-wrapper">
                            <div class="input-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                class="form-input"
                                placeholder="Enter your full name"
                                required
                                autocomplete="name"
                            >
                            <label for="name" class="input-label">Full Name</label>
                        </div>
                        <div class="error-message" id="name-error"></div>
                    </div>

                    <!-- Email Field -->
                    <div class="input-group">
                        <div class="input-wrapper">
                            <div class="input-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="form-input"
                                placeholder="Enter your email address"
                                required
                                autocomplete="email"
                            >
                            <label for="email" class="input-label">Email Address</label>
                        </div>
                        <div class="error-message" id="email-error"></div>
                    </div>

                    <!-- Phone Field -->
                    <div class="input-group">
                        <div class="input-wrapper">
                            <div class="input-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <input
                                type="tel"
                                id="phone"
                                name="phone"
                                class="form-input"
                                placeholder="Enter your phone number (optional)"
                                autocomplete="tel"
                            >
                            <label for="phone" class="input-label">Phone Number (Optional)</label>
                        </div>
                        <div class="error-message" id="phone-error"></div>
                    </div>

                    <!-- Password Field -->
                    <div class="input-group">
                        <div class="input-wrapper">
                            <div class="input-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                class="form-input"
                                placeholder="Create a strong password"
                                required
                                autocomplete="new-password"
                            >
                            <label for="password" class="input-label">Password</label>
                            <button type="button" class="password-toggle" id="password-toggle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div class="password-strength" id="password-strength"></div>
                        <div class="error-message" id="password-error"></div>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="input-group">
                        <div class="input-wrapper">
                            <div class="input-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <input
                                type="password"
                                id="confirmPassword"
                                name="confirmPassword"
                                class="form-input"
                                placeholder="Confirm your password"
                                required
                                autocomplete="new-password"
                            >
                            <label for="confirmPassword" class="input-label">Confirm Password</label>
                            <button type="button" class="password-toggle" id="confirm-password-toggle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div class="error-message" id="confirm-password-error"></div>
                    </div>

                    <!-- Role Selection -->
                    <div class="input-group">
                        <div class="role-selection">
                            <label class="role-label">I want to:</label>
                            <div class="role-options">
                                <label class="role-option">
                                    <input type="radio" name="role" value="student" required>
                                    <div class="role-card">
                                        <div class="role-icon">
                                            <i class="fas fa-book-reader"></i>
                                        </div>
                                        <div class="role-info">
                                            <h4 class="role-title">Learn</h4>
                                            <p class="role-desc">Join as a Student</p>
                                        </div>
                                    </div>
                                </label>
                                <label class="role-option">
                                    <input type="radio" name="role" value="instructor" required>
                                    <div class="role-card">
                                        <div class="role-icon">
                                            <i class="fas fa-chalkboard-teacher"></i>
                                        </div>
                                        <div class="role-info">
                                            <h4 class="role-title">Teach</h4>
                                            <p class="role-desc">Join as an Instructor</p>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>
                        <div class="error-message" id="role-error"></div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="input-group">
                        <label class="custom-checkbox terms-checkbox">
                            <input type="checkbox" name="terms" id="terms" required>
                            <span class="checkbox-mark"></span>
                            <span class="checkbox-text">
                                I agree to the <a href="/terms" target="_blank" class="terms-link">Terms of Service</a>
                                and <a href="/privacy" target="_blank" class="terms-link">Privacy Policy</a>
                            </span>
                        </label>
                        <div class="error-message" id="terms-error"></div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="submit-btn primary-btn">
                        <span class="btn-text">
                            <i class="fas fa-user-plus"></i>
                            Create Account
                        </span>
                        <div class="btn-loader">
                            <i class="fas fa-spinner fa-spin"></i>
                        </div>
                    </button>

                    <!-- Divider -->
                    <div class="form-divider">
                        <span class="divider-text">or continue with</span>
                    </div>

                    <!-- Social Login -->
                    <div class="social-login">
                        <a href="/auth/google" class="social-btn google-btn">
                            <i class="fab fa-google"></i>
                            <span>Google</span>
                        </a>
                    </div>
                </form>

                <!-- Form Footer -->
                <div class="form-footer">
                    <p class="switch-form-text">
                        Already have an account?
                        <a href="/login" class="switch-form-link">Sign in here</a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Right Side - Benefits/Features -->
        <div class="auth-benefits-section">
            <div class="benefits-container">
                <div class="benefits-header">
                    <h3 class="benefits-title">Start Your Learning Journey</h3>
                    <p class="benefits-subtitle">Join our community of passionate learners and educators</p>
                </div>

                <div class="benefits-grid">
                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <div class="benefit-content">
                            <h4 class="benefit-title">10,000+ Courses</h4>
                            <p class="benefit-description">Choose from our vast library of expert-created courses</p>
                        </div>
                    </div>

                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="benefit-content">
                            <h4 class="benefit-title">Global Community</h4>
                            <p class="benefit-description">Connect with learners and instructors worldwide</p>
                        </div>
                    </div>

                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                        <div class="benefit-content">
                            <h4 class="benefit-title">Skill Certificates</h4>
                            <p class="benefit-description">Earn certificates to showcase your achievements</p>
                        </div>
                    </div>

                    <div class="benefit-card">
                        <div class="benefit-icon">
                            <i class="fas fa-infinity"></i>
                        </div>
                        <div class="benefit-content">
                            <h4 class="benefit-title">Unlimited Access</h4>
                            <p class="benefit-description">Learn at your own pace with lifetime access</p>
                        </div>
                    </div>
                </div>

                <!-- Registration Steps -->
                <div class="registration-steps">
                    <h4 class="steps-title">Getting Started is Easy</h4>
                    <div class="steps-list">
                        <div class="step-item">
                            <div class="step-number">1</div>
                            <div class="step-text">Create your account</div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">2</div>
                            <div class="step-text">Choose your learning path</div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">3</div>
                            <div class="step-text">Start learning immediately</div>
                        </div>
                    </div>
                </div>

                <!-- Stats -->
                <div class="auth-stats">
                    <div class="stat-item">
                        <div class="stat-number">50K+</div>
                        <div class="stat-label">Students</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">1,000+</div>
                        <div class="stat-label">Instructors</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">95%</div>
                        <div class="stat-label">Satisfaction</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
@import url('/css/register.css');
</style>

<script src="/js/register.js"></script>
