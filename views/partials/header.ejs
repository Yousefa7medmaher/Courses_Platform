<header class="main-header">
    <nav class="navbar">
        <div class="container">
            <!-- Logo -->
            <div class="navbar-brand">
                <a href="/" class="logo">
                    <i class="fas fa-graduation-cap"></i>
                    <span>JooCourses</span>
                </a>
            </div>

            <!-- Mobile Menu Toggle -->
            <button class="mobile-menu-toggle" id="mobile-menu-toggle">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <!-- Navigation Links -->
            <div class="navbar-nav" id="navbar-nav">
                <div class="nav-links">
                    <a href="/" class="nav-link">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                    <a href="/courses" class="nav-link">
                        <i class="fas fa-book"></i>
                        <span>Courses</span>
                    </a>
                    <a href="/about" class="nav-link">
                        <i class="fas fa-info-circle"></i>
                        <span>About</span>
                    </a>
                    <a href="/contact" class="nav-link">
                        <i class="fas fa-envelope"></i>
                        <span>Contact</span>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="nav-actions">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <!-- Authenticated User -->
                        <div class="user-menu">
                            <button class="user-menu-toggle" id="user-menu-toggle">
                                <% if (user.photo) { %>
                                    <img src="<%= user.photo %>" alt="<%= user.name %>" class="user-avatar">
                                <% } else { %>
                                    <div class="user-avatar-placeholder">
                                        <i class="fas fa-user"></i>
                                    </div>
                                <% } %>
                                <span class="user-name"><%= user.name %></span>
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            
                            <div class="user-dropdown" id="user-dropdown">
                                <div class="user-info">
                                    <p class="user-email"><%= user.email %></p>
                                    <span class="user-role badge badge-<%= user.role %>"><%= user.role %></span>
                                </div>
                                
                                <div class="dropdown-divider"></div>
                                
                                <% if (user.role === 'student') { %>
                                    <a href="/student/dashboard" class="dropdown-item">
                                        <i class="fas fa-tachometer-alt"></i>
                                        <span>Dashboard</span>
                                    </a>
                                    <a href="/student/courses" class="dropdown-item">
                                        <i class="fas fa-book-open"></i>
                                        <span>My Courses</span>
                                    </a>
                                <% } else if (user.role === 'instructor') { %>
                                    <a href="/instructor/dashboard" class="dropdown-item">
                                        <i class="fas fa-tachometer-alt"></i>
                                        <span>Dashboard</span>
                                    </a>
                                    <a href="/instructor/courses" class="dropdown-item">
                                        <i class="fas fa-chalkboard-teacher"></i>
                                        <span>My Courses</span>
                                    </a>
                                    <a href="/instructor/courses/new" class="dropdown-item">
                                        <i class="fas fa-plus"></i>
                                        <span>Create Course</span>
                                    </a>
                                <% } else if (user.role === 'admin') { %>
                                    <a href="/admin/dashboard" class="dropdown-item">
                                        <i class="fas fa-tachometer-alt"></i>
                                        <span>Admin Dashboard</span>
                                    </a>
                                    <a href="/admin/users" class="dropdown-item">
                                        <i class="fas fa-users"></i>
                                        <span>Manage Users</span>
                                    </a>
                                    <a href="/admin/courses" class="dropdown-item">
                                        <i class="fas fa-book"></i>
                                        <span>Manage Courses</span>
                                    </a>
                                <% } %>
                                
                                <a href="/profile" class="dropdown-item">
                                    <i class="fas fa-user-edit"></i>
                                    <span>Edit Profile</span>
                                </a>
                                
                                <div class="dropdown-divider"></div>
                                
                                <button onclick="logout()" class="dropdown-item logout-btn">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Logout</span>
                                </button>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Guest User -->
                        <div class="auth-buttons">
                            <a href="/login" class="btn btn-outline">
                                <i class="fas fa-sign-in-alt"></i>
                                <span>Login</span>
                            </a>
                            <a href="/register" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i>
                                <span>Sign Up</span>
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>
