<!-- Bulk Actions Modal -->
<div id="bulkActionsModal" class="modal fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="modal-backdrop absolute inset-0"></div>
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 relative z-10">
        <div class="flex items-center justify-between p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-800">Bulk Actions</h3>
            <button onclick="closeModal('bulkActionsModal')" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="p-6">
            <p class="text-sm text-gray-600 mb-4">Select an action to apply to <span id="selectedCount">0</span> selected users:</p>

            <div class="space-y-3">
                <button onclick="bulkAction('activate')" class="w-full flex items-center justify-between p-3 bg-green-50 hover:bg-green-100 rounded-lg transition-colors">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-user-check text-green-600"></i>
                        <span class="font-medium text-green-800">Activate Users</span>
                    </div>
                    <i class="fas fa-chevron-right text-green-400"></i>
                </button>

                <button onclick="bulkAction('deactivate')" class="w-full flex items-center justify-between p-3 bg-red-50 hover:bg-red-100 rounded-lg transition-colors">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-user-times text-red-600"></i>
                        <span class="font-medium text-red-800">Deactivate Users</span>
                    </div>
                    <i class="fas fa-chevron-right text-red-400"></i>
                </button>

                <button onclick="bulkAction('delete')" class="w-full flex items-center justify-between p-3 bg-red-50 hover:bg-red-100 rounded-lg transition-colors">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-trash text-red-600"></i>
                        <span class="font-medium text-red-800">Delete Users</span>
                    </div>
                    <i class="fas fa-chevron-right text-red-400"></i>
                </button>
            </div>

            <div class="flex justify-end space-x-3 pt-6">
                <button onclick="closeModal('bulkActionsModal')"
                        class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// User management specific JavaScript
document.addEventListener('DOMContentLoaded', function() {
    initUserManagement();
});

function initUserManagement() {
    // Select all checkbox functionality
    const selectAllCheckbox = document.getElementById('selectAll');
    const userCheckboxes = document.querySelectorAll('tbody input[type="checkbox"]');

    if (selectAllCheckbox) {
        selectAllCheckbox.addEventListener('change', function() {
            userCheckboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateBulkActionsButton();
        });
    }

    // Individual checkbox change
    userCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            updateSelectAllState();
            updateBulkActionsButton();
        });
    });

    // Form submission
    const createUserForm = document.getElementById('createUserForm');
    if (createUserForm) {
        createUserForm.addEventListener('submit', function(e) {
            e.preventDefault();
            submitForm('createUserForm', function() {
                showToast('User created successfully!', 'success');
                closeModal('createUserModal');
                // Refresh page or update table
                setTimeout(() => location.reload(), 1000);
            });
        });
    }
}

function updateSelectAllState() {
    const selectAllCheckbox = document.getElementById('selectAll');
    const userCheckboxes = document.querySelectorAll('tbody input[type="checkbox"]');
    const checkedBoxes = document.querySelectorAll('tbody input[type="checkbox"]:checked');

    if (checkedBoxes.length === 0) {
        selectAllCheckbox.checked = false;
        selectAllCheckbox.indeterminate = false;
    } else if (checkedBoxes.length === userCheckboxes.length) {
        selectAllCheckbox.checked = true;
        selectAllCheckbox.indeterminate = false;
    } else {
        selectAllCheckbox.checked = false;
        selectAllCheckbox.indeterminate = true;
    }
}

function updateBulkActionsButton() {
    const checkedBoxes = document.querySelectorAll('tbody input[type="checkbox"]:checked');
    const bulkButton = document.getElementById('bulkActionsBtn');

    if (checkedBoxes.length > 0) {
        if (!bulkButton) {
            createBulkActionsButton(checkedBoxes.length);
        } else {
            bulkButton.querySelector('.count').textContent = checkedBoxes.length;
        }
    } else {
        if (bulkButton) {
            bulkButton.remove();
        }
    }
}

function createBulkActionsButton(count) {
    const header = document.querySelector('header .flex.items-center.space-x-4');
    const button = document.createElement('button');
    button.id = 'bulkActionsBtn';
    button.className = 'px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors';
    button.innerHTML = `<i class="fas fa-tasks mr-2"></i>Bulk Actions (<span class="count">${count}</span>)`;
    button.onclick = () => openModal('bulkActionsModal');

    header.insertBefore(button, header.lastElementChild);
}

function editUser(userId) {
    // Open edit modal with user data
    showToast('Edit functionality would be implemented here', 'info');
}

function deleteUser(userId) {
    deleteItem(userId, 'user', function() {
        showToast('User deleted successfully!', 'success');
        // Remove row from table or refresh
        setTimeout(() => location.reload(), 1000);
    });
}

function bulkAction(action) {
    const checkedBoxes = document.querySelectorAll('tbody input[type="checkbox"]:checked');
    const userIds = Array.from(checkedBoxes).map(cb => cb.value);

    let message = '';
    switch(action) {
        case 'activate':
            message = `Are you sure you want to activate ${userIds.length} users?`;
            break;
        case 'deactivate':
            message = `Are you sure you want to deactivate ${userIds.length} users?`;
            break;
        case 'delete':
            message = `Are you sure you want to delete ${userIds.length} users? This action cannot be undone.`;
            break;
    }

    confirmAction(message, function() {
        showPageLoader();

        // Simulate API call
        setTimeout(() => {
            hidePageLoader();
            closeModal('bulkActionsModal');
            showToast(`${action.charAt(0).toUpperCase() + action.slice(1)} action completed successfully!`, 'success');

            // Clear selections
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
            updateBulkActionsButton();

            // Refresh page
            setTimeout(() => location.reload(), 1000);
        }, 2000);
    });
}

function clearFilters() {
    document.getElementById('userSearch').value = '';
    document.getElementById('roleFilter').value = '';
    document.getElementById('statusFilter').value = '';

    // Show all rows
    const rows = document.querySelectorAll('#usersTable tbody tr');
    rows.forEach(row => row.style.display = '');

    // Update stats
    updateTableStats('usersTable');
}
</script>

