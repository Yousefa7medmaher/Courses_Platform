<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Learn Without Limits</h1>
            <p class="hero-subtitle">
                Discover thousands of courses from expert instructors. 
                Build skills, advance your career, and achieve your goals with JooCourses.
            </p>
            <div class="hero-actions">
                <% if (typeof user === 'undefined' || !user) { %>
                    <a href="/register" class="btn btn-primary btn-lg">
                        <i class="fas fa-rocket"></i>
                        Start Learning Today
                    </a>
                    <a href="/courses" class="btn btn-outline btn-lg">
                        <i class="fas fa-search"></i>
                        Browse Courses
                    </a>
                <% } else { %>
                    <a href="/courses" class="btn btn-primary btn-lg">
                        <i class="fas fa-book-open"></i>
                        Explore Courses
                    </a>
                    <% if (user.role === 'student') { %>
                        <a href="/student/dashboard" class="btn btn-outline btn-lg">
                            <i class="fas fa-tachometer-alt"></i>
                            My Dashboard
                        </a>
                    <% } else if (user.role === 'instructor') { %>
                        <a href="/instructor/dashboard" class="btn btn-outline btn-lg">
                            <i class="fas fa-chalkboard-teacher"></i>
                            Instructor Dashboard
                        </a>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="section">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="stat-number" id="total-courses">10,000+</div>
                <div class="stat-label">Courses Available</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-number" id="total-students">50,000+</div>
                <div class="stat-label">Active Students</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="stat-number" id="total-instructors">1,000+</div>
                <div class="stat-label">Expert Instructors</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-certificate"></i>
                </div>
                <div class="stat-number" id="total-certificates">25,000+</div>
                <div class="stat-label">Certificates Earned</div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Courses Section -->
<% if (typeof featuredCourses !== 'undefined' && featuredCourses && featuredCourses.length > 0) { %>
<section class="section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Featured Courses</h2>
            <p class="section-subtitle">Discover our most popular and highly-rated courses</p>
        </div>

        <div class="courses-grid">
            <% featuredCourses.forEach(function(course) { %>
                <div class="course-card">
                    <div class="course-image">
                        <% if (course.imageUrl) { %>
                            <img src="<%= course.imageUrl %>" alt="<%= course.title %>" loading="lazy">
                        <% } else { %>
                            <div class="course-image-placeholder">
                                <i class="fas fa-book"></i>
                            </div>
                        <% } %>
                        <div class="course-badge">
                            <span class="badge badge-<%= course.level.toLowerCase() %>"><%= course.level %></span>
                        </div>
                    </div>
                    
                    <div class="course-content">
                        <div class="course-meta">
                            <span class="course-category"><%= course.category %></span>
                            <div class="course-rating">
                                <div class="stars">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star <%= i <= Math.floor(course.averageRating) ? 'active' : '' %>"></i>
                                    <% } %>
                                </div>
                                <span class="rating-text">(<%= course.totalReviews %>)</span>
                            </div>
                        </div>
                        
                        <h3 class="course-title">
                            <a href="/courses/<%= course._id %>"><%= course.title %></a>
                        </h3>
                        
                        <p class="course-description"><%= course.description.substring(0, 120) %>...</p>
                        
                        <div class="course-instructor">
                            <i class="fas fa-user"></i>
                            <span><%= course.instructor.name %></span>
                        </div>
                        
                        <div class="course-stats">
                            <div class="stat">
                                <i class="fas fa-users"></i>
                                <span><%= course.totalStudents %> students</span>
                            </div>
                            <div class="stat">
                                <i class="fas fa-clock"></i>
                                <span><%= course.duration %>h</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="course-footer">
                        <div class="course-price">
                            <% if (course.price === 0) { %>
                                <span class="price-free">Free</span>
                            <% } else { %>
                                <span class="price">$<%= course.price %></span>
                            <% } %>
                        </div>
                        <a href="/courses/<%= course._id %>" class="btn btn-primary btn-sm">
                            View Course
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="section-footer">
            <a href="/courses" class="btn btn-outline btn-lg">
                <i class="fas fa-arrow-right"></i>
                View All Courses
            </a>
        </div>
    </div>
</section>
<% } %>

