<!-- Enhanced Course Form (Create/Edit) -->
<div class="course-form-page">
    <!-- Enhanced Page Header -->
    <div class="page-header">
        <div class="header-background">
            <div class="gradient-overlay"></div>
            <div class="pattern-overlay"></div>
        </div>
        <div class="container">
            <div class="breadcrumb-nav">
                <a href="/instructor/dashboard" class="breadcrumb-link">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <i class="fas fa-chevron-right breadcrumb-separator"></i>
                <a href="/instructor/courses" class="breadcrumb-link">
                    <i class="fas fa-book"></i>
                    <span>Courses</span>
                </a>
                <i class="fas fa-chevron-right breadcrumb-separator"></i>
                <span class="breadcrumb-current">
                    <i class="fas fa-<%= isEdit ? 'edit' : 'plus' %>"></i>
                    <span><%= isEdit ? 'Edit Course' : 'Create Course' %></span>
                </span>
            </div>
            <div class="header-content">
                <div class="header-info">
                    <div class="title-section">
                        <h1 class="page-title">
                            <i class="fas fa-<%= isEdit ? 'edit' : 'plus' %>"></i>
                            <span><%= isEdit ? 'Edit Course' : 'Create New Course' %></span>
                        </h1>
                        <div class="title-underline"></div>
                    </div>
                    <p class="page-subtitle">
                        <%= isEdit ? 'Update your course information to keep it fresh and engaging' : 'Fill in the details to create your course and share your knowledge with the world' %>
                    </p>
                    <div class="form-progress">
                        <div class="progress-steps">
                            <div class="step active" data-step="1">
                                <i class="fas fa-info-circle"></i>
                                <span>Basic Info</span>
                            </div>
                            <div class="step" data-step="2">
                                <i class="fas fa-image"></i>
                                <span>Media</span>
                            </div>
                            <div class="step" data-step="3">
                                <i class="fas fa-cog"></i>
                                <span>Settings</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-actions">
                    <a href="/instructor/courses" class="btn btn-outline btn-enhanced">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to Courses</span>
                    </a>
                    <% if (isEdit && course) { %>
                        <a href="/instructor/courses/<%= course._id %>" class="btn btn-secondary btn-enhanced">
                            <i class="fas fa-eye"></i>
                            <span>View Course</span>
                        </a>
                        <a href="/courses/<%= course._id %>" class="btn btn-ghost btn-enhanced" target="_blank">
                            <i class="fas fa-external-link-alt"></i>
                            <span>Preview</span>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Content -->
    <div class="form-section">
        <div class="container">
            <form id="courseForm" method="POST" 
                  action="<%= isEdit ? `/instructor/courses/${course._id}` : '/instructor/courses' %>" 
                  enctype="multipart/form-data" class="course-form">
                
                <div class="form-grid">
                    <!-- Basic Information -->
                    <div class="form-card">
                        <div class="card-header">
                            <h2 class="card-title">
                                <i class="fas fa-info-circle"></i>
                                Basic Information
                            </h2>
                        </div>
                        <div class="card-content">
                            <div class="form-group enhanced-form-group">
                                <label for="title" class="form-label">
                                    <i class="fas fa-heading"></i>
                                    <span>Course Title</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <input type="text" id="title" name="title" class="form-control enhanced-input"
                                           value="<%= course ? course.title : '' %>" required
                                           placeholder="Enter a compelling course title"
                                           maxlength="100"
                                           data-validation="required|min:5|max:100">
                                    <div class="input-icon">
                                        <i class="fas fa-heading"></i>
                                    </div>
                                    <div class="char-counter">
                                        <span class="current">0</span>/<span class="max">100</span>
                                    </div>
                                </div>
                                <div class="form-help">
                                    <i class="fas fa-info-circle"></i>
                                    Choose a clear, descriptive title that captures what students will learn
                                </div>
                                <div class="validation-message"></div>
                            </div>

                            <div class="form-group enhanced-form-group">
                                <label for="description" class="form-label">
                                    <i class="fas fa-align-left"></i>
                                    <span>Course Description</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <textarea id="description" name="description" class="form-control enhanced-textarea"
                                              rows="6" required
                                              placeholder="Describe what students will learn, the skills they'll gain, and why this course is valuable..."
                                              maxlength="500"
                                              data-validation="required|min:50|max:500"><%= course ? course.description : '' %></textarea>
                                    <div class="char-counter">
                                        <span class="current">0</span>/<span class="max">500</span>
                                    </div>
                                </div>
                                <div class="form-help">
                                    <i class="fas fa-lightbulb"></i>
                                    Write a compelling description that explains the value and outcomes of your course
                                </div>
                                <div class="validation-message"></div>
                            </div>

                            <div class="form-row">
                                <div class="form-group enhanced-form-group">
                                    <label for="category" class="form-label">
                                        <i class="fas fa-tag"></i>
                                        <span>Category</span>
                                        <span class="required">*</span>
                                    </label>
                                    <div class="input-wrapper">
                                        <select id="category" name="category" class="form-control enhanced-select" required
                                                data-validation="required">
                                            <option value="">Select a category</option>
                                            <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                                                <% categories.forEach(cat => { %>
                                                    <option value="<%= cat %>" <%= course && course.category === cat ? 'selected' : '' %>>
                                                        <%= cat === 'Development' ? 'üíª' : cat === 'Business' ? 'üíº' : cat === 'Design' ? 'üé®' : cat === 'Marketing' ? 'üìà' : cat === 'Photography' ? 'üì∏' : 'üéµ' %> <%= cat %>
                                                    </option>
                                                <% }); %>
                                            <% } else { %>
                                                <option value="Development" <%= course && course.category === 'Development' ? 'selected' : '' %>>üíª Development</option>
                                                <option value="Business" <%= course && course.category === 'Business' ? 'selected' : '' %>>üíº Business</option>
                                                <option value="Design" <%= course && course.category === 'Design' ? 'selected' : '' %>>üé® Design</option>
                                                <option value="Marketing" <%= course && course.category === 'Marketing' ? 'selected' : '' %>>üìà Marketing</option>
                                                <option value="Photography" <%= course && course.category === 'Photography' ? 'selected' : '' %>>üì∏ Photography</option>
                                                <option value="Music" <%= course && course.category === 'Music' ? 'selected' : '' %>>üéµ Music</option>
                                            <% } %>
                                        </select>
                                        <div class="select-icon">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>
                                    </div>
                                    <div class="form-help">
                                        <i class="fas fa-folder"></i>
                                        Choose the category that best fits your course content
                                    </div>
                                    <div class="validation-message"></div>
                                </div>

                                <div class="form-group enhanced-form-group">
                                    <label for="level" class="form-label">
                                        <i class="fas fa-signal"></i>
                                        <span>Difficulty Level</span>
                                        <span class="required">*</span>
                                    </label>
                                    <div class="input-wrapper">
                                        <select id="level" name="level" class="form-control enhanced-select" required
                                                data-validation="required">
                                            <option value="">Select difficulty level</option>
                                            <% if (typeof levels !== 'undefined' && levels.length > 0) { %>
                                                <% levels.forEach(level => { %>
                                                    <option value="<%= level %>" <%= course && course.level === level ? 'selected' : '' %>>
                                                        <%= level === 'Beginner' ? 'üü¢' : level === 'Intermediate' ? 'üü°' : 'üî¥' %> <%= level %> - <%= level === 'Beginner' ? 'No prior experience needed' : level === 'Intermediate' ? 'Some experience helpful' : 'Extensive experience required' %>
                                                    </option>
                                                <% }); %>
                                            <% } else { %>
                                                <option value="Beginner" <%= course && course.level === 'Beginner' ? 'selected' : '' %>>üü¢ Beginner - No prior experience needed</option>
                                                <option value="Intermediate" <%= course && course.level === 'Intermediate' ? 'selected' : '' %>>üü° Intermediate - Some experience helpful</option>
                                                <option value="Advanced" <%= course && course.level === 'Advanced' ? 'selected' : '' %>>üî¥ Advanced - Extensive experience required</option>
                                            <% } %>
                                        </select>
                                        <div class="select-icon">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>
                                    </div>
                                    <div class="form-help">
                                        <i class="fas fa-graduation-cap"></i>
                                        Set the appropriate difficulty level for your target audience
                                    </div>
                                    <div class="validation-message"></div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="price" class="form-label">Price ($) *</label>
                                    <input type="number" id="price" name="price" class="form-control" 
                                           value="<%= course ? course.price : '' %>" min="0" step="0.01" required
                                           placeholder="0.00">
                                </div>

                                <div class="form-group">
                                    <label for="duration" class="form-label">Duration (hours)</label>
                                    <input type="number" id="duration" name="duration" class="form-control" 
                                           value="<%= course ? course.duration : '' %>" min="0.5" step="0.5"
                                           placeholder="e.g., 10.5">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="tags" class="form-label">Tags</label>
                                <input type="text" id="tags" name="tags" class="form-control" 
                                       value="<%= course && course.tags ? course.tags.join(', ') : '' %>"
                                       placeholder="e.g., javascript, web development, programming">
                                <div class="form-help">Separate tags with commas to help students find your course</div>
                            </div>
                        </div>
                    </div>

                    <!-- Course Image -->
                    <div class="form-card">
                        <div class="card-header">
                            <h2 class="card-title">
                                <i class="fas fa-image"></i>
                                Course Image
                            </h2>
                        </div>
                        <div class="card-content">
                            <div class="image-upload-section">
                                <% if (course && course.imageUrl) { %>
                                    <div class="current-image">
                                        <%
                                        const formImageUrl = getCourseImageUrl(course, 'medium');
                                        %>

                                        <% if (course.responsiveImages) { %>
                                            <picture>
                                                <% if (course.responsiveImages.medium && course.responsiveImages.medium.webp) { %>
                                                    <source srcset="<%= course.responsiveImages.medium.webp %>" type="image/webp">
                                                <% } %>
                                                <img src="<%= formImageUrl %>"
                                                     alt="Current course image"
                                                     id="currentImage"
                                                     class="enhanced-image"
                                                     onerror="this.src='<%= getDefaultImage('course', course.category) %>'">
                                            </picture>
                                        <% } else { %>
                                            <img src="<%= formImageUrl %>"
                                                 alt="Current course image"
                                                 id="currentImage"
                                                 class="enhanced-image"
                                                 onerror="this.src='<%= getDefaultImage('course', course.category) %>'">
                                        <% } %>

                                        <div class="image-overlay">
                                            <button type="button" class="btn btn-sm btn-primary" onclick="document.getElementById('image').click()">
                                                <i class="fas fa-camera"></i>
                                                Change Image
                                            </button>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="image-placeholder" id="imagePlaceholder">
                                        <i class="fas fa-image"></i>
                                        <p>Upload Course Image</p>
                                        <button type="button" class="btn btn-primary" onclick="document.getElementById('image').click()">
                                            <i class="fas fa-upload"></i>
                                            Choose Image
                                        </button>
                                    </div>
                                <% } %>
                                
                                <input type="file" id="image" name="image" accept="image/*" style="display: none;">
                                <div class="form-help">
                                    Upload a high-quality image (recommended: 1280x720px, max 5MB)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Course Settings -->
                    <div class="form-card">
                        <div class="card-header">
                            <h2 class="card-title">
                                <i class="fas fa-cog"></i>
                                Course Settings
                            </h2>
                        </div>
                        <div class="card-content">
                            <div class="form-group enhanced-form-group">
                                <label for="status" class="form-label">
                                    <i class="fas fa-toggle-on"></i>
                                    <span>Course Status</span>
                                </label>
                                <div class="input-wrapper">
                                    <select id="status" name="status" class="form-control enhanced-select">
                                        <% if (typeof statusOptions !== 'undefined' && statusOptions.length > 0) { %>
                                            <% statusOptions.forEach(option => { %>
                                                <option value="<%= option.value %>"
                                                        <%= course && course.status === option.value ? 'selected' : (!course && option.value === 'draft' ? 'selected' : '') %>>
                                                    <%= option.value === 'draft' ? 'üìù' : option.value === 'pending' ? '‚è≥' : 'üåê' %> <%= option.label %>
                                                </option>
                                            <% }); %>
                                        <% } else { %>
                                            <option value="draft" <%= !course || course.status === 'draft' ? 'selected' : '' %>>üìù Draft</option>
                                            <option value="pending" <%= course && course.status === 'pending' ? 'selected' : '' %>>‚è≥ Pending Review</option>
                                            <option value="published" <%= course && course.status === 'published' ? 'selected' : '' %>>üåê Published</option>
                                        <% } %>
                                    </select>
                                    <div class="select-icon">
                                        <i class="fas fa-chevron-down"></i>
                                    </div>
                                </div>
                                <div class="form-help">
                                    <i class="fas fa-info-circle"></i>
                                    <div class="status-help">
                                        <div class="status-option">
                                            <strong>üìù Draft:</strong> Only visible to you - perfect for work in progress
                                        </div>
                                        <div class="status-option">
                                            <strong>‚è≥ Pending:</strong> Submitted for review - awaiting approval
                                        </div>
                                        <div class="status-option">
                                            <strong>üåê Published:</strong> Live and available to students worldwide
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox-group">
                                    <label class="checkbox-label">
                                        <input type="checkbox" name="featured" value="true" 
                                               <%= course && course.featured ? 'checked' : '' %>>
                                        <span class="checkmark"></span>
                                        Feature this course
                                    </label>
                                    <div class="form-help">Featured courses appear prominently on the homepage</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Enhanced Form Actions -->
                <div class="form-actions enhanced-form-actions">
                    <div class="actions-left">
                        <a href="/instructor/courses" class="btn btn-outline btn-enhanced">
                            <i class="fas fa-times"></i>
                            <span>Cancel</span>
                        </a>
                        <% if (isEdit) { %>
                            <button type="button" class="btn btn-ghost btn-enhanced" id="previewBtn">
                                <i class="fas fa-eye"></i>
                                <span>Preview</span>
                            </button>
                        <% } %>
                    </div>
                    <div class="actions-center">
                        <div class="form-validation-summary" id="validationSummary" style="display: none;">
                            <div class="validation-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="validation-text">
                                <span class="validation-title">Please fix the following issues:</span>
                                <ul class="validation-list" id="validationList"></ul>
                            </div>
                        </div>
                    </div>
                    <div class="actions-right">
                        <% if (isEdit) { %>
                            <button type="button" class="btn btn-secondary btn-enhanced" id="saveDraftBtn">
                                <i class="fas fa-save"></i>
                                <span>Save Draft</span>
                            </button>
                            <button type="submit" class="btn btn-primary btn-enhanced" id="updateBtn">
                                <i class="fas fa-check"></i>
                                <span>Update Course</span>
                                <div class="btn-loading" style="display: none;">
                                    <i class="fas fa-spinner fa-spin"></i>
                                    <span>Updating...</span>
                                </div>
                            </button>
                        <% } else { %>
                            <button type="button" class="btn btn-secondary btn-enhanced" id="saveDraftBtn">
                                <i class="fas fa-save"></i>
                                <span>Save as Draft</span>
                            </button>
                            <button type="submit" class="btn btn-primary btn-enhanced" id="createBtn">
                                <i class="fas fa-plus"></i>
                                <span>Create Course</span>
                                <div class="btn-loading" style="display: none;">
                                    <i class="fas fa-spinner fa-spin"></i>
                                    <span>Creating...</span>
                                </div>
                            </button>
                        <% } %>
                    </div>
                </div>

                <!-- Form Progress Indicator -->
                <div class="form-progress-indicator" id="formProgress">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 0%"></div>
                    </div>
                    <div class="progress-text">
                        <span class="progress-label">Form Completion</span>
                        <span class="progress-percentage">0%</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.course-form-page {
    min-height: 100vh;
    background: var(--bg-secondary);
}

.page-header {
    background: var(--bg-primary);
    padding: var(--spacing-2xl) 0;
    border-bottom: 1px solid var(--border-light);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-xl);
}

.page-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
}

.page-subtitle {
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
}

.form-section {
    padding: var(--spacing-2xl) 0;
}

.course-form {
    max-width: 1000px;
    margin: 0 auto;
}

.form-grid {
    display: grid;
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
}

.form-card {
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
}

.card-header {
    padding: var(--spacing-xl);
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-light);
}

.card-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
}

.card-title i {
    color: var(--primary);
}

.card-content {
    padding: var(--spacing-xl);
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
}

.form-group {
    margin-bottom: var(--spacing-lg);
}

.form-label {
    display: block;
    font-weight: var(--font-weight-medium);
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-sm);
}

.form-control {
    width: 100%;
    padding: var(--spacing-md);
    border: 2px solid var(--border-light);
    border-radius: var(--radius-md);
    font-size: var(--font-size-base);
    transition: all var(--transition-fast);
    background: var(--bg-primary);
    color: var(--text-primary);
}

.form-control:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.form-help {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    margin-top: var(--spacing-xs);
    line-height: 1.4;
}

.image-upload-section {
    text-align: center;
}

.current-image {
    position: relative;
    display: inline-block;
    border-radius: var(--radius-lg);
    overflow: hidden;
    max-width: 400px;
}

.current-image img {
    width: 100%;
    height: auto;
    display: block;
}

.image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-fast);
}

.current-image:hover .image-overlay {
    opacity: 1;
}

.image-placeholder {
    border: 2px dashed var(--border-medium);
    border-radius: var(--radius-lg);
    padding: var(--spacing-4xl);
    color: var(--text-muted);
}

.image-placeholder i {
    font-size: 3rem;
    margin-bottom: var(--spacing-lg);
    color: var(--text-muted);
}

.image-placeholder p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-lg);
}

.checkbox-group {
    margin-bottom: var(--spacing-md);
}

.checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    cursor: pointer;
    font-size: var(--font-size-base);
    color: var(--text-primary);
}

.checkbox-label input[type="checkbox"] {
    width: 18px;
    height: 18px;
    accent-color: var(--primary);
}

/* Enhanced Form Actions */
.form-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-xl);
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-light);
    margin-top: var(--spacing-xl);
}

.enhanced-form-actions {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--spacing-lg);
    align-items: center;
    padding: var(--spacing-xl) var(--spacing-2xl);
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    border-radius: var(--radius-xl);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--border-light);
    position: relative;
    overflow: hidden;
}

.enhanced-form-actions::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--primary), var(--secondary), var(--success));
}

.actions-left {
    display: flex;
    gap: var(--spacing-md);
    justify-self: start;
}

.actions-center {
    justify-self: center;
}

.actions-right {
    display: flex;
    gap: var(--spacing-md);
    justify-self: end;
}

/* Form Validation Summary */
.form-validation-summary {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-lg);
    background: rgba(var(--error-rgb), 0.1);
    border: 1px solid rgba(var(--error-rgb), 0.2);
    border-radius: var(--radius-lg);
    color: var(--error);
    max-width: 400px;
}

.validation-icon {
    font-size: var(--font-size-lg);
    flex-shrink: 0;
}

.validation-text {
    flex: 1;
    min-width: 0;
}

.validation-title {
    font-weight: var(--font-weight-semibold);
    display: block;
    margin-bottom: var(--spacing-xs);
