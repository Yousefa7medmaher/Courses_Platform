<!-- Enhanced Instructor Courses List -->
<div class="instructor-courses">
    <!-- Enhanced Page Header -->
    <div class="page-header">
        <div class="header-background">
            <div class="gradient-overlay"></div>
            <div class="pattern-overlay"></div>
        </div>
        <div class="container">
            <div class="breadcrumb-nav">
                <a href="/instructor/dashboard" class="breadcrumb-link">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <i class="fas fa-chevron-right breadcrumb-separator"></i>
                <span class="breadcrumb-current">
                    <i class="fas fa-book"></i>
                    <span>My Courses</span>
                </span>
            </div>
            <div class="header-content">
                <div class="instructor-profile-mini">
                    <div class="instructor-avatar-mini">
                        <img src="<%= getUserAvatarUrl(user) %>"
                             alt="<%= user.name %>"
                             class="profile-image enhanced-image"
                             onerror="this.src='<%= getDefaultImage('user') %>'">
                        <div class="avatar-status">
                            <i class="fas fa-circle"></i>
                        </div>
                    </div>
                    <div class="header-info">
                        <div class="title-section">
                            <h1 class="page-title">
                                <i class="fas fa-book"></i>
                                <span>My Courses</span>
                            </h1>
                            <div class="title-underline"></div>
                        </div>
                        <p class="page-subtitle">Manage and track all your courses to inspire learners worldwide</p>
                        <div class="course-stats-summary">
                            <div class="stat-item">
                                <span class="stat-number"><%= courses.length %></span>
                                <span class="stat-label">Total</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number"><%= courses.filter(c => c.status === 'published').length %></span>
                                <span class="stat-label">Published</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number"><%= courses.reduce((sum, c) => sum + (c.totalStudents || 0), 0) %></span>
                                <span class="stat-label">Students</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-actions">
                    <a href="/instructor/courses/new" class="btn btn-primary btn-enhanced">
                        <i class="fas fa-plus"></i>
                        <span>Create New Course</span>
                    </a>
                    <div class="view-toggle">
                        <button class="toggle-btn active" data-view="grid" title="Grid View">
                            <i class="fas fa-th"></i>
                        </button>
                        <button class="toggle-btn" data-view="list" title="List View">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="filters-section">
        <div class="container">
            <form class="filters-form" method="GET" action="/instructor/courses">
                <div class="filters-row">
                    <div class="filter-group">
                        <label for="search" class="filter-label">Search</label>
                        <input type="text" id="search" name="search" class="form-control" 
                               placeholder="Search courses..." value="<%= filters.search || '' %>">
                    </div>
                    
                    <div class="filter-group">
                        <label for="status" class="filter-label">Status</label>
                        <select id="status" name="status" class="form-control">
                            <option value="">All Status</option>
                            <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Draft</option>
                            <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="published" <%= filters.status === 'published' ? 'selected' : '' %>>Published</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="sortBy" class="filter-label">Sort By</label>
                        <select id="sortBy" name="sortBy" class="form-control">
                            <option value="createdAt" <%= filters.sortBy === 'createdAt' ? 'selected' : '' %>>Date Created</option>
                            <option value="title" <%= filters.sortBy === 'title' ? 'selected' : '' %>>Title</option>
                            <option value="totalStudents" <%= filters.sortBy === 'totalStudents' ? 'selected' : '' %>>Students</option>
                            <option value="averageRating" <%= filters.sortBy === 'averageRating' ? 'selected' : '' %>>Rating</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="sortOrder" class="filter-label">Order</label>
                        <select id="sortOrder" name="sortOrder" class="form-control">
                            <option value="desc" <%= filters.sortOrder === 'desc' ? 'selected' : '' %>>Descending</option>
                            <option value="asc" <%= filters.sortOrder === 'asc' ? 'selected' : '' %>>Ascending</option>
                        </select>
                    </div>
                    
                    <div class="filter-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                            Filter
                        </button>
                        <a href="/instructor/courses" class="btn btn-outline">
                            <i class="fas fa-times"></i>
                            Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Courses List -->
    <div class="courses-section">
        <div class="container">
            <% if (courses && courses.length > 0) { %>
                <div class="courses-grid">
                    <% courses.forEach(course => { %>
                        <div class="course-card enhanced-course-card">
                            <div class="course-image">
                                <%
                                const courseListImageUrl = getCourseImageUrl(course, 'medium');
                                %>

                                <% if (course.responsiveImages) { %>
                                    <picture>
                                        <% if (course.responsiveImages.medium && course.responsiveImages.medium.webp) { %>
                                            <source srcset="<%= course.responsiveImages.medium.webp %>" type="image/webp">
                                        <% } %>
                                        <img src="<%= courseListImageUrl %>"
                                             alt="<%= course.title %>"
                                             class="enhanced-image"
                                             loading="lazy"
                                             onerror="this.src='<%= getDefaultImage('course', course.category) %>'">
                                    </picture>
                                <% } else { %>
                                    <img src="<%= courseListImageUrl %>"
                                         alt="<%= course.title %>"
                                         class="enhanced-image"
                                         loading="lazy"
                                         onerror="this.src='<%= getDefaultImage('course', course.category) %>'">
                                <% } %>

                                <div class="course-overlay">
                                    <div class="overlay-actions">
                                        <a href="/instructor/courses/<%= course._id %>" class="overlay-btn view-btn" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/instructor/courses/<%= course._id %>/edit" class="overlay-btn edit-btn" title="Edit Course">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/courses/<%= course._id %>" class="overlay-btn preview-btn" title="Public View" target="_blank">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="course-status-badge status-<%= course.status %>">
                                    <i class="fas fa-<%= course.status === 'published' ? 'globe' : course.status === 'pending' ? 'clock' : 'edit' %>"></i>
                                    <span><%= course.status.charAt(0).toUpperCase() + course.status.slice(1) %></span>
                                </div>

                                <% if (course.featured) { %>
                                    <div class="featured-badge">
                                        <i class="fas fa-star"></i>
                                        <span>Featured</span>
                                    </div>
                                <% } %>
                            </div>
                            
                            <div class="course-content">
                                <div class="course-header">
                                    <h3 class="course-title">
                                        <a href="/instructor/courses/<%= course._id %>"><%= course.title %></a>
                                    </h3>
                                    <div class="course-badges">
                                        <span class="category-badge">
                                            <i class="fas fa-tag"></i>
                                            <span><%= course.category %></span>
                                        </span>
                                        <span class="level-badge level-<%= course.level.toLowerCase() %>">
                                            <i class="fas fa-signal"></i>
                                            <span><%= course.level %></span>
                                        </span>
                                    </div>
                                </div>

                                <p class="course-description">
                                    <%= course.description.length > 120 ? course.description.substring(0, 120) + '...' : course.description %>
                                </p>

                                <div class="course-meta">
                                    <div class="meta-item">
                                        <i class="fas fa-users"></i>
                                        <span><%= course.totalStudents || 0 %> students</span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-star"></i>
                                        <span><%= (course.averageRating || 0).toFixed(1) %></span>
                                        <div class="rating-stars">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star <%= i <= Math.round(course.averageRating || 0) ? 'active' : '' %>"></i>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-dollar-sign"></i>
                                        <span>$<%= course.price || 0 %></span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-calendar"></i>
                                        <span><%= new Date(course.createdAt).toLocaleDateString() %></span>
                                    </div>
                                </div>
                                
                                <div class="course-stats">
                                    <div class="stat">
                                        <span class="stat-value"><%= course.lessons ? course.lessons.length : 0 %></span>
                                        <span class="stat-label">Lessons</span>
                                    </div>
                                    <div class="stat">
                                        <span class="stat-value"><%= course.videos ? course.videos.length : 0 %></span>
                                        <span class="stat-label">Videos</span>
                                    </div>
                                    <div class="stat">
                                        <span class="stat-value"><%= course.totalReviews %></span>
                                        <span class="stat-label">Reviews</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="course-actions">
                                <a href="/instructor/courses/<%= course._id %>" class="btn btn-sm btn-outline">
                                    <i class="fas fa-eye"></i>
                                    View
                                </a>
                                <a href="/instructor/courses/<%= course._id %>/edit" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline dropdown-toggle" type="button" data-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/instructor/courses/<%= course._id %>/lessons">
                                            <i class="fas fa-list"></i>
                                            Manage Lessons
                                        </a>
                                        <a class="dropdown-item" href="/instructor/courses/<%= course._id %>/videos">
                                            <i class="fas fa-video"></i>
                                            Manage Videos
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <form method="POST" action="/instructor/courses/<%= course._id %>/toggle-publish" style="display: inline;">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-<%= course.status === 'published' ? 'eye-slash' : 'globe' %>"></i>
                                                <%= course.status === 'published' ? 'Unpublish' : 'Publish' %>
                                            </button>
                                        </form>
                                        <div class="dropdown-divider"></div>
                                        <form method="POST" action="/instructor/courses/<%= course._id %>/delete" 
                                              onsubmit="return confirm('Are you sure you want to delete this course?')" style="display: inline;">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                
                <!-- Pagination -->
                <% if (pagination && pagination.totalPages > 1) { %>
                    <div class="pagination-section">
                        <%- include('../partials/pagination', { pagination: pagination, baseUrl: '/instructor/courses' }) %>
                    </div>
                <% } %>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <h2>No courses found</h2>
                    <% if (filters.search || filters.status) { %>
                        <p>No courses match your current filters. Try adjusting your search criteria.</p>
                        <a href="/instructor/courses" class="btn btn-outline">Clear Filters</a>
                    <% } else { %>
                        <p>You haven't created any courses yet. Start by creating your first course!</p>
                        <a href="/instructor/courses/new" class="btn btn-primary">
                            <i class="fas fa-plus"></i>
                            Create Your First Course
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.instructor-courses {
    min-height: 100vh;
    background: var(--bg-secondary);
}

.page-header {
    background: var(--bg-primary);
    padding: var(--spacing-2xl) 0;
    border-bottom: 1px solid var(--border-light);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-xl);
}

.instructor-profile-mini {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
}

.instructor-avatar-mini {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid var(--border-light);
    flex-shrink: 0;
}

.instructor-avatar-mini .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.instructor-avatar-mini .profile-placeholder {
    width: 100%;
    height: 100%;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    font-size: 1.2rem;
}

.page-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
}

.page-subtitle {
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
}

.filters-section {
    background: var(--bg-primary);
    padding: var(--spacing-xl) 0;
    border-bottom: 1px solid var(--border-light);
}

.filters-form {
    background: var(--bg-secondary);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
}

.filters-row {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr auto;
    gap: var(--spacing-lg);
    align-items: end;
}

.filter-group {
    display: flex;
    flex-direction: column;
}

.filter-label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
}

.filter-actions {
    display: flex;
    gap: var(--spacing-sm);
}

.courses-section {
    padding: var(--spacing-2xl) 0;
}

.courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-xl);
}

.course-card {
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-fast);
    display: flex;
    flex-direction: column;
}

.course-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.course-image {
    position: relative;
    height: 200px;
    overflow: hidden;
}

.course-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.course-placeholder {
    width: 100%;
    height: 100%;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    font-size: 3rem;
}

.course-status-badge {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
}

.status-draft { background: #f3f4f6; color: #6b7280; }
.status-pending { background: #fef3c7; color: #d97706; }
.status-published { background: #d1fae5; color: #059669; }

.course-content {
    padding: var(--spacing-xl);
    flex: 1;
}

.course-title a {
    color: var(--text-primary);
    text-decoration: none;
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    line-height: 1.4;
}

.course-title a:hover {
    color: var(--primary);
}

.course-description {
    color: var(--text-secondary);
    margin: var(--spacing-md) 0;
    line-height: 1.6;
}

.course-meta {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-sm);
    margin: var(--spacing-lg) 0;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.meta-item i {
    color: var(--primary);
    width: 16px;
}

.course-stats {
    display: flex;
    justify-content: space-around;
    padding: var(--spacing-md) 0;
    border-top: 1px solid var(--border-light);
    margin-top: var(--spacing-lg);
}

.stat {
    text-align: center;
}

.stat-value {
    display: block;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
}

.stat-label {
    font-size: var(--font-size-xs);
    color: var(--text-secondary);
    text-transform: uppercase;
}

.course-actions {
    padding: var(--spacing-lg) var(--spacing-xl);
    background: var(--bg-secondary);
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
}

.dropdown {
    position: relative;
    margin-left: auto;
}

.dropdown-toggle {
    background: none;
    border: 1px solid var(--border-medium);
}

.dropdown-menu {
    position: absolute;
    top: 100%;
    right: 0;
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    min-width: 180px;
    z-index: 1000;
    display: none;
}

.dropdown.show .dropdown-menu {
    display: block;
}

.dropdown-item {
    display: block;
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--text-primary);
    text-decoration: none;
    border: none;
    background: none;
    text-align: left;
    font-size: var(--font-size-sm);
}

.dropdown-item:hover {
    background: var(--bg-secondary);
}

.dropdown-item.text-danger {
    color: var(--error);
}

.dropdown-divider {
    height: 1px;
    background: var(--border-light);
    margin: var(--spacing-xs) 0;
}

.empty-state {
    text-align: center;
    padding: var(--spacing-4xl);
}

.empty-icon {
    width: 120px;
    height: 120px;
    background: var(--bg-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--spacing-xl);
    font-size: 3rem;
    color: var(--text-muted);
}

.empty-state h2 {
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
}

.empty-state p {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xl);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}

.pagination-section {
    margin-top: var(--spacing-2xl);
    display: flex;
    justify-content: center;
}

@media (max-width: 1024px) {
    .filters-row {
        grid-template-columns: 1fr;
        gap: var(--spacing-md);
    }
    
    .filter-actions {
        justify-content: center;
    }
    
    .courses-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
}

@media (max-width: 768px) {
    .header-content {
        flex-direction: column;
        text-align: center;
        gap: var(--spacing-lg);
    }
    
    .courses-grid {
        grid-template-columns: 1fr;
    }

    .course-meta {
        grid-template-columns: 1fr;
    }

    .search-filter-bar {
        grid-template-columns: 1fr;
        gap: var(--spacing-lg);
    }

    .filter-section {
        flex-direction: column;
        gap: var(--spacing-md);
        width: 100%;
    }

    .filter-select {
        width: 100%;
    }

    .view-options {
        justify-self: center;
    }
}

/* Enhanced Mobile Responsive Design */
