<!-- Instructor Course Details -->
<div class="course-details-page">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="header-content">
                <div class="course-info">
                    <div class="course-image">
                        <% if (course.imageUrl) { %>
                            <img src="<%= course.imageUrl %>" alt="<%= course.title %>">
                        <% } else { %>
                            <div class="course-placeholder">
                                <i class="fas fa-book"></i>
                            </div>
                        <% } %>
                        <div class="course-status-badge status-<%= course.status %>">
                            <%= course.status.charAt(0).toUpperCase() + course.status.slice(1) %>
                        </div>
                    </div>
                    <div class="course-meta">
                        <h1 class="course-title"><%= course.title %></h1>
                        <p class="course-description"><%= course.description %></p>
                        <div class="course-stats">
                            <div class="stat">
                                <i class="fas fa-users"></i>
                                <span><%= course.totalStudents || 0 %> students</span>
                            </div>
                            <div class="stat">
                                <i class="fas fa-star"></i>
                                <span><%= (course.averageRating || 0).toFixed(1) %> (<%= course.totalReviews || 0 %> reviews)</span>
                            </div>
                            <div class="stat">
                                <i class="fas fa-dollar-sign"></i>
                                <span>$<%= course.price || 0 %></span>
                            </div>
                            <div class="stat">
                                <i class="fas fa-calendar"></i>
                                <span>Created <%= new Date(course.createdAt).toLocaleDateString() %></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-actions">
                    <a href="/instructor/courses" class="btn btn-outline">
                        <i class="fas fa-arrow-left"></i>
                        Back to Courses
                    </a>
                    <a href="/instructor/courses/<%= course._id %>/edit" class="btn btn-primary">
                        <i class="fas fa-edit"></i>
                        Edit Course
                    </a>
                    <div class="dropdown">
                        <button class="btn btn-outline dropdown-toggle" type="button">
                            <i class="fas fa-ellipsis-v"></i>
                            More Actions
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/instructor/courses/<%= course._id %>/lessons">
                                <i class="fas fa-list"></i>
                                Manage Lessons
                            </a>
                            <a class="dropdown-item" href="/instructor/courses/<%= course._id %>/videos">
                                <i class="fas fa-video"></i>
                                Manage Videos
                            </a>
                            <div class="dropdown-divider"></div>
                            <form method="POST" action="/instructor/courses/<%= course._id %>/toggle-publish" style="display: inline;">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-<%= course.status === 'published' ? 'eye-slash' : 'globe' %>"></i>
                                    <%= course.status === 'published' ? 'Unpublish' : 'Publish' %>
                                </button>
                            </form>
                            <div class="dropdown-divider"></div>
                            <form method="POST" action="/instructor/courses/<%= course._id %>/delete" 
                                  onsubmit="return confirm('Are you sure you want to delete this course?')" style="display: inline;">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-trash"></i>
                                    Delete Course
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Analytics -->
    <div class="analytics-section">
        <div class="container">
            <div class="analytics-grid">
                <div class="analytics-card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-line"></i>
                            Performance Overview
                        </h3>
                    </div>
                    <div class="card-content">
                        <div class="metrics-grid">
                            <div class="metric">
                                <div class="metric-value"><%= course.totalStudents || 0 %></div>
                                <div class="metric-label">Total Enrollments</div>
                            </div>
                            <div class="metric">
                                <div class="metric-value">$<%= ((course.price || 0) * (course.totalStudents || 0)).toLocaleString() %></div>
                                <div class="metric-label">Total Revenue</div>
                            </div>
                            <div class="metric">
                                <div class="metric-value"><%= (course.averageRating || 0).toFixed(1) %></div>
                                <div class="metric-label">Average Rating</div>
                            </div>
                            <div class="metric">
                                <div class="metric-value"><%= course.totalReviews || 0 %></div>
                                <div class="metric-label">Total Reviews</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="analytics-card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-star"></i>
                            Rating Distribution
                        </h3>
                    </div>
                    <div class="card-content">
                        <% if (analytics && analytics.ratingDistribution) { %>
                            <div class="rating-bars">
                                <% for (let i = 5; i >= 1; i--) { %>
                                    <div class="rating-bar">
                                        <span class="rating-label"><%= i %> stars</span>
                                        <div class="bar-container">
                                            <div class="bar-fill"  <%= course.totalReviews > 0 ? ((analytics.ratingDistribution[i] || 0) / course.totalReviews * 100) : 0 %>%></div>
                                        </div>
                                        <span class="rating-count"><%= analytics.ratingDistribution[i] || 0 %></span>
                                    </div>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="empty-state-small">
                                <p>No ratings yet</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Content -->
    <div class="content-section">
        <div class="container">
            <div class="content-grid">
                <!-- Course Details -->
                <div class="content-main">
                    <div class="content-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-info-circle"></i>
                                Course Information
                            </h3>
                        </div>
                        <div class="card-content">
                            <div class="info-grid">
                                <div class="info-item">
                                    <label>Category</label>
                                    <span><%= course.category || 'Not specified' %></span>
                                </div>
                                <div class="info-item">
                                    <label>Level</label>
                                    <span><%= course.level || 'Not specified' %></span>
                                </div>
                                <div class="info-item">
                                    <label>Duration</label>
                                    <span><%= course.duration ? course.duration + ' hours' : 'Not specified' %></span>
                                </div>
                                <div class="info-item">
                                    <label>Price</label>
                                    <span>$<%= course.price || 0 %></span>
                                </div>
                                <div class="info-item">
                                    <label>Status</label>
                                    <span class="status-badge status-<%= course.status %>">
                                        <%= course.status.charAt(0).toUpperCase() + course.status.slice(1) %>
                                    </span>
                                </div>
                                <div class="info-item">
                                    <label>Featured</label>
                                    <span><%= course.featured ? 'Yes' : 'No' %></span>
                                </div>
                            </div>
                            
                            <% if (course.tags && course.tags.length > 0) { %>
                                <div class="tags-section">
                                    <label>Tags</label>
                                    <div class="tags-list">
                                        <% course.tags.forEach(function(tag) { %>
                                            <span class="tag"><%= tag %></span>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Course Content Structure -->
                    <div class="content-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-list"></i>
                                Course Content
                            </h3>
                            <div class="card-actions">
                                <a href="/instructor/courses/<%= course._id %>/lessons" class="btn btn-sm btn-primary">
                                    <i class="fas fa-plus"></i>
                                    Manage Lessons
                                </a>
                            </div>
                        </div>
                        <div class="card-content">
                            <% if (course.lessons && course.lessons.length > 0) { %>
                                <div class="lessons-list">
                                    <% course.lessons.forEach(function(lesson, index) { %>
                                        <div class="lesson-item">
                                            <div class="lesson-number"><%= index + 1 %></div>
                                            <div class="lesson-info">
                                                <h4 class="lesson-title"><%= lesson.title %></h4>
                                                <p class="lesson-description"><%= lesson.description %></p>
                                                <div class="lesson-meta">
                                                    <span class="lesson-duration">
                                                        <i class="fas fa-clock"></i>
                                                        <%= lesson.duration || 'No duration set' %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="empty-state-small">
                                    <i class="fas fa-list"></i>
                                    <p>No lessons added yet</p>
                                    <a href="/instructor/courses/<%= course._id %>/lessons" class="btn btn-primary">
                                        <i class="fas fa-plus"></i>
                                        Add First Lesson
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="content-sidebar">
                    <!-- Recent Reviews -->
                    <div class="sidebar-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-comments"></i>
                                Recent Reviews
                            </h3>
                        </div>
                        <div class="card-content">
                            <% if (analytics && analytics.recentReviews && analytics.recentReviews.length > 0) { %>
                                <div class="reviews-list">
                                    <% analytics.recentReviews.forEach(function(review) { %>
                                        <div class="review-item">
                                            <div class="review-header">
                                                <div class="reviewer-info">
                                                    <strong><%= review.user ? review.user.name : 'Anonymous' %></strong>
                                                    <div class="review-rating">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star <%= i <= review.rating ? 'active' : '' %>"></i>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <span class="review-date">
                                                    <%= new Date(review.createdAt).toLocaleDateString() %>
                                                </span>
                                            </div>
                                            <p class="review-text"><%= review.review %></p>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="empty-state-small">
                                    <p>No reviews yet</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="sidebar-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-bolt"></i>
                                Quick Actions
                            </h3>
                        </div>
                        <div class="card-content">
                            <div class="quick-actions">
                                <a href="/instructor/courses/<%= course._id %>/edit" class="quick-action">
                                    <i class="fas fa-edit"></i>
                                    <span>Edit Course</span>
                                </a>
                                <a href="/instructor/courses/<%= course._id %>/lessons" class="quick-action">
                                    <i class="fas fa-list"></i>
                                    <span>Manage Lessons</span>
                                </a>
                                <a href="/instructor/courses/<%= course._id %>/videos" class="quick-action">
                                    <i class="fas fa-video"></i>
                                    <span>Manage Videos</span>
                                </a>
                                <a href="/courses/<%= course._id %>" class="quick-action" target="_blank">
                                    <i class="fas fa-external-link-alt"></i>
                                    <span>View Public Page</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

