                if (statTrend) {
                    ariaLabel += `, ${statTrend.textContent}`;
                }
                card.setAttribute('aria-label', ariaLabel);
            }

            // Add keyboard event handlers
            card.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    this.click();
                }
            });

            // Update aria-live regions when stats change
            if (statNumber) {
                statNumber.setAttribute('aria-live', 'polite');
            }
        });

