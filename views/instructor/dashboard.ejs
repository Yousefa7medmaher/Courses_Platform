<!-- Enhanced Instructor Dashboard -->
<div class="instructor-dashboard">
    <!-- Page Header with Gradient Background -->
    <div class="dashboard-header">
        <div class="header-background">
            <div class="gradient-overlay"></div>
            <div class="pattern-overlay"></div>
        </div>
        <div class="container">
            <div class="header-content">
                <div class="instructor-profile-section">
                    <div class="instructor-avatar">
                        <% if (user.photo) { %>
                            <img src="<%= getUserAvatarUrl(user) %>"
                                 alt="<%= user.name %>"
                                 class="profile-image enhanced-image"
                                 onerror="this.src='<%= getDefaultImage('user') %>'">
                        <% } else { %>
                            <div class="profile-placeholder">
                                <i class="fas fa-user"></i>
                            </div>
                        <% } %>
                        <div class="avatar-status">
                            <i class="fas fa-circle"></i>
                        </div>
                    </div>
                    <div class="welcome-section">
                        <div class="greeting-time">
                            <span id="greeting-text">Good morning</span>,
                        </div>
                        <h1 class="dashboard-title"><%= user.name %>!</h1>
                        <p class="dashboard-subtitle">Ready to inspire and educate? Let's make today count.</p>
                        <div class="instructor-info">
                            <span class="instructor-role">
                                <i class="fas fa-chalkboard-teacher"></i>
                                <span>Instructor</span>
                            </span>
                            <% if (user.location) { %>
                                <span class="instructor-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><%= user.location %></span>
                                </span>
                            <% } %>
                            <span class="member-since">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Member since <%= new Date(user.createdAt).getFullYear() %></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="header-actions">
                    <div class="action-buttons">
                        <a href="/profile" class="btn btn-outline btn-glass">
                            <i class="fas fa-user-edit"></i>
                            <span>Edit Profile</span>
                        </a>
                        <a href="/instructor/courses/new" class="btn btn-primary btn-glow">
                            <i class="fas fa-plus"></i>
                            <span>Create Course</span>
                        </a>
                        <a href="/instructor/courses" class="btn btn-outline btn-glass">
                            <i class="fas fa-book"></i>
                            <span>My Courses</span>
                        </a>
                    </div>
                    <div class="quick-stats">
                        <div class="quick-stat">
                            <span class="stat-number"><%= stats.totalCourses %></span>
                            <span class="stat-label">Courses</span>
                        </div>
                        <div class="quick-stat">
                            <span class="stat-number"><%= stats.totalStudents %></span>
                            <span class="stat-label">Students</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Statistics Cards -->
    <div class="stats-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-chart-line"></i>
                    Your Teaching Analytics
                </h2>
                <p class="section-subtitle">Track your progress and impact</p>
            </div>

            <div class="stats-grid">
                <!-- Primary Stats -->
                <div class="stat-card primary-stat">
                    <div class="stat-background">
                        <div class="stat-icon">
                            <i class="fas fa-book"></i>
                        </div>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" data-count="<%= stats.totalCourses %>">0</div>
                        <div class="stat-label">Total Courses</div>
                        <div class="stat-trend">
                            <i class="fas fa-arrow-up"></i>
                            <span>+2 this month</span>
                        </div>
                    </div>
                </div>

                <div class="stat-card success-stat">
                    <div class="stat-background">
                        <div class="stat-icon">
                            <i class="fas fa-globe"></i>
                        </div>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" data-count="<%= stats.publishedCourses %>">0</div>
                        <div class="stat-label">Published Courses</div>
                        <div class="stat-progress">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: <%= stats.totalCourses > 0 ? (stats.publishedCourses / stats.totalCourses * 100) : 0 %>%"></div>
                            </div>
                            <span class="progress-text"><%= stats.totalCourses > 0 ? Math.round(stats.publishedCourses / stats.totalCourses * 100) : 0 %>% published</span>
                        </div>
                    </div>
                </div>

                <div class="stat-card info-stat">
                    <div class="stat-background">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" data-count="<%= stats.totalStudents %>">0</div>
                        <div class="stat-label">Total Students</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>Growing</span>
                        </div>
                    </div>
                </div>

                <div class="stat-card warning-stat">
                    <div class="stat-background">
                        <div class="stat-icon">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number">$<span data-count="<%= stats.totalRevenue %>">0</span></div>
                        <div class="stat-label">Total Revenue</div>
                        <div class="stat-trend">
                            <i class="fas fa-chart-line"></i>
                            <span>This month: $<%= Math.round(stats.totalRevenue * 0.15) %></span>
                        </div>
                    </div>
                </div>

                <div class="stat-card rating-stat">
                    <div class="stat-background">
                        <div class="stat-icon">
                            <i class="fas fa-star"></i>
                        </div>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number"><%= stats.averageRating.toFixed(1) %></div>
                        <div class="stat-label">Average Rating</div>
                        <div class="rating-stars">
                            <% for (let i = 1; i <= 5; i++) { %>
                                <i class="fas fa-star <%= i <= Math.round(stats.averageRating) ? 'active' : '' %>"></i>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="stat-card secondary-stat">
                    <div class="stat-background">
                        <div class="stat-icon">
                            <i class="fas fa-comment"></i>
                        </div>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" data-count="<%= stats.totalReviews %>">0</div>
                        <div class="stat-label">Total Reviews</div>
                        <div class="stat-trend">
                            <i class="fas fa-comments"></i>
                            <span>Feedback received</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Panel -->
            <div class="quick-actions-panel">
                <div class="panel-header">
                    <h3 class="panel-title">
                        <i class="fas fa-bolt"></i>
                        Quick Actions
                    </h3>
                </div>
                <div class="actions-grid">
                    <a href="/instructor/courses/new" class="action-card create-action">
                        <div class="action-icon">
                            <i class="fas fa-plus"></i>
                        </div>
                        <div class="action-content">
                            <h4>Create Course</h4>
                            <p>Start building your next course</p>
                        </div>
                    </a>
                    <a href="/instructor/courses" class="action-card manage-action">
                        <div class="action-icon">
                            <i class="fas fa-list"></i>
                        </div>
                        <div class="action-content">
                            <h4>Manage Courses</h4>
                            <p>Edit and organize your content</p>
                        </div>
                    </a>
                    <a href="/instructor/analytics" class="action-card analytics-action">
                        <div class="action-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <div class="action-content">
                            <h4>View Analytics</h4>
                            <p>Track your performance</p>
                        </div>
                    </a>
                    <a href="/instructor/students" class="action-card students-action">
                        <div class="action-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="action-content">
                            <h4>Student Progress</h4>
                            <p>Monitor learning outcomes</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="dashboard-content">
        <div class="container">
            <div class="content-grid">
                <!-- Recent Courses -->
                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">
                            <i class="fas fa-clock"></i>
                            Recent Courses
                        </h2>
                        <a href="/instructor/courses" class="section-link">
                            View All
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                    <div class="courses-list">
                        <% if (recentCourses && recentCourses.length > 0) { %>
                            <% recentCourses.forEach((course, index) => { %>
                                <div class="course-item enhanced-course-card" style="animation-delay: <%= index * 0.1 %>s">
                                    <div class="course-image">
                                        <%
                                        const dashboardImageUrl = getCourseImageUrl(course, 'small');
                                        %>
                                        <% if (course.responsiveImages) { %>
                                            <picture>
                                                <% if (course.responsiveImages.small && course.responsiveImages.small.webp) { %>
                                                    <source srcset="<%= course.responsiveImages.small.webp %>" type="image/webp">
                                                <% } %>
                                                <img src="<%= dashboardImageUrl %>"
                                                     alt="<%= course.title %>"
                                                     class="enhanced-image"
                                                     loading="lazy"
                                                     onerror="this.src='<%= getDefaultImage('course', course.category) %>'">
                                            </picture>
                                        <% } else { %>
                                            <img src="<%= dashboardImageUrl %>"
                                                 alt="<%= course.title %>"
                                                 class="enhanced-image"
                                                 loading="lazy"
                                                 onerror="this.src='<%= getDefaultImage('course', course.category) %>'">
                                        <% } %>
                                        <div class="course-overlay">
                                            <div class="overlay-actions">
                                                <a href="/instructor/courses/<%= course._id %>" class="overlay-btn view-btn" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/instructor/courses/<%= course._id %>/edit" class="overlay-btn edit-btn" title="Edit Course">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="course-status-badge status-<%= course.status %>">
                                            <i class="fas fa-<%= course.status === 'published' ? 'globe' : course.status === 'pending' ? 'clock' : 'edit' %>"></i>
                                            <%= course.status.charAt(0).toUpperCase() + course.status.slice(1) %>
                                        </div>
                                    </div>
                                    <div class="course-info">
                                        <div class="course-header">
                                            <h3 class="course-title">
                                                <a href="/instructor/courses/<%= course._id %>"><%= course.title %></a>
                                            </h3>
                                            <div class="course-category">
                                                <i class="fas fa-tag"></i>
                                                <%= course.category %>
                                            </div>
                                        </div>
                                        <div class="course-meta">
                                            <div class="meta-item">
                                                <i class="fas fa-users"></i>
                                                <span><%= course.totalStudents || 0 %> students</span>
                                            </div>
                                            <div class="meta-item">
                                                <i class="fas fa-star"></i>
                                                <span><%= (course.averageRating || 0).toFixed(1) %></span>
                                            </div>
                                            <div class="meta-item">
                                                <i class="fas fa-dollar-sign"></i>
                                                <span>$<%= course.price || 0 %></span>
                                            </div>
                                            <div class="meta-item">
                                                <i class="fas fa-calendar"></i>
                                                <span><%= new Date(course.createdAt).toLocaleDateString() %></span>
                                            </div>
                                        </div>
                                        <div class="course-progress">
                                            <div class="progress-info">
                                                <span class="progress-label">Course Progress</span>
                                                <span class="progress-percentage">75%</span>
                                            </div>
                                            <div class="progress-bar">
                                                <div class="progress-fill" style="width: 75%"></div>
                                            </div>
                                        </div>
                                        <div class="course-actions">
                                            <a href="/instructor/courses/<%= course._id %>/edit" class="btn btn-sm btn-outline">
                                                <i class="fas fa-edit"></i>
                                                <span>Edit</span>
                                            </a>
                                            <a href="/instructor/courses/<%= course._id %>" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i>
                                                <span>View</span>
                                            </a>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-ghost dropdown-toggle" type="button">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="/instructor/courses/<%= course._id %>/analytics">
                                                        <i class="fas fa-chart-bar"></i>
                                                        Analytics
                                                    </a>
                                                    <a class="dropdown-item" href="/courses/<%= course._id %>" target="_blank">
                                                        <i class="fas fa-external-link-alt"></i>
                                                        Public View
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state enhanced-empty">
                                <div class="empty-animation">
                                    <div class="empty-icon">
                                        <i class="fas fa-book"></i>
                                    </div>
                                    <div class="empty-particles">
                                        <div class="particle"></div>
                                        <div class="particle"></div>
                                        <div class="particle"></div>
                                    </div>
                                </div>
                                <h3>Ready to start teaching?</h3>
                                <p>Create your first course and begin sharing your knowledge with the world!</p>
                                <div class="empty-actions">
                                    <a href="/instructor/courses/new" class="btn btn-primary btn-lg">
                                        <i class="fas fa-plus"></i>
                                        <span>Create Your First Course</span>
                                    </a>
                                    <a href="/instructor/help" class="btn btn-outline">
                                        <i class="fas fa-question-circle"></i>
                                        <span>Need Help?</span>
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Top Performing Courses -->
                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">Top Performing Courses</h2>
                    </div>
                    <div class="top-courses-list">
                        <% if (topCourses && topCourses.length > 0) { %>
                            <% topCourses.forEach((course, index) => { %>
                                <div class="top-course-item">
                                    <div class="course-rank">
                                        <span class="rank-number">#<%= index + 1 %></span>
                                    </div>
                                    <div class="course-details">
                                        <h4 class="course-name">
                                            <a href="/instructor/courses/<%= course._id %>"><%= course.title %></a>
                                        </h4>
                                        <div class="course-stats">
                                            <span class="stat">
                                                <i class="fas fa-users"></i>
                                                <%= course.totalStudents %> students
                                            </span>
                                            <span class="stat">
                                                <i class="fas fa-star"></i>
                                                <%= course.averageRating.toFixed(1) %>
                                            </span>
                                            <span class="stat">
                                                <i class="fas fa-dollar-sign"></i>
                                                $<%= (course.price * course.totalStudents).toLocaleString() %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state-small">
                                <p>No performance data available yet.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="activity-section">
                <div class="section-header">
                    <h2 class="section-title">Recent Activity</h2>
                </div>
                <div class="activity-list">
                    <% if (recentEnrollments && recentEnrollments.length > 0) { %>
                        <% recentEnrollments.slice(0, 5).forEach(enrollment => { %>
                            <% if (enrollment.studentsEnrolled && enrollment.studentsEnrolled.length > 0) { %>
                                <% enrollment.studentsEnrolled.slice(0, 2).forEach(student => { %>
                                    <div class="activity-item">
                                        <div class="activity-icon">
                                            <i class="fas fa-user-plus"></i>
                                        </div>
                                        <div class="activity-content">
                                            <p class="activity-text">
                                                <strong><%= student.name %></strong> enrolled in
                                                <a href="/instructor/courses/<%= enrollment._id %>"><%= enrollment.title %></a>
                                            </p>
                                            <span class="activity-time">
                                                <%= new Date(student.createdAt || enrollment.createdAt).toLocaleDateString() %>
                                            </span>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } %>
                        <% }); %>
                    <% } else { %>
                        <div class="empty-state-small">
                            <p>No recent activity to show.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Enhanced Dashboard Styles */
.instructor-dashboard {
    min-height: 100vh;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    position: relative;
}

.dashboard-header {
    position: relative;
    color: var(--text-white);
    padding: var(--spacing-3xl) 0 var(--spacing-4xl) 0;
    overflow: hidden;
}

.header-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
}

.gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    opacity: 0.9;
}

.pattern-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
        radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 2px, transparent 2px),
        radial-gradient(circle at 75% 75%, rgba(255,255,255,0.1) 2px, transparent 2px);
    background-size: 50px 50px;
    animation: float 20s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(1deg); }
}

.header-content {
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--spacing-2xl);
}

.instructor-profile-section {
    display: flex;
    align-items: center;
    gap: var(--spacing-xl);
    flex: 1;
}

.instructor-avatar {
    position: relative;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid rgba(255, 255, 255, 0.3);
    flex-shrink: 0;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    transition: transform var(--transition-normal);
}

.instructor-avatar:hover {
    transform: scale(1.05);
}

.instructor-avatar .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.instructor-avatar .profile-placeholder {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.8);
    font-size: 2.5rem;
    backdrop-filter: blur(10px);
}

.avatar-status {
    position: absolute;
    bottom: 8px;
    right: 8px;
    width: 20px;
    height: 20px;
    background: #10b981;
    border-radius: 50%;
    border: 3px solid white;
    display: flex;
    align-items: center;
    justify-content: center;
}

.avatar-status i {
    font-size: 8px;
    color: white;
}

.welcome-section {
    flex: 1;
    min-width: 0;
}

.greeting-time {
    font-size: var(--font-size-lg);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--spacing-xs);
    font-weight: var(--font-weight-medium);
}

.dashboard-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-md);
    color: var(--text-white);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    background: linear-gradient(45deg, #ffffff, #f0f9ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.dashboard-subtitle {
    font-size: var(--font-size-lg);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--spacing-lg);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

.instructor-info {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
    margin-top: var(--spacing-md);
    font-size: var(--font-size-sm);
}

.instructor-role,
.instructor-location,
.member-since {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: rgba(255, 255, 255, 0.9);
    background: rgba(255, 255, 255, 0.1);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all var(--transition-fast);
}

.instructor-role:hover,
.instructor-location:hover,
.member-since:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
}

.instructor-role i,
.instructor-location i,
.member-since i {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--font-size-sm);
}

.header-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    align-items: flex-end;
    position: relative;
    z-index: 2;
}

.action-buttons {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
}

.quick-stats {
    display: flex;
    gap: var(--spacing-lg);
    background: rgba(255, 255, 255, 0.1);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.quick-stat {
    text-align: center;
    min-width: 60px;
}

.quick-stat .stat-number {
    display: block;
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-white);
    line-height: 1;
}

.quick-stat .stat-label {
    font-size: var(--font-size-xs);
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    margin-top: var(--spacing-xs);
}

/* Enhanced Button Styles */
.btn {
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-lg);
    font-weight: var(--font-weight-medium);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    transition: all var(--transition-fast);
    border: 2px solid transparent;
    font-size: var(--font-size-sm);
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
