            announcement.remove();
        }, 1000);
    }

    // Enhanced keyboard navigation
    function initKeyboardNavigation() {
        // Add arrow key navigation for stat cards
        const statCards = Array.from(document.querySelectorAll('.stat-card'));

        statCards.forEach((card, index) => {
            card.addEventListener('keydown', function(e) {
                let targetIndex;

                switch(e.key) {
                    case 'ArrowRight':
                    case 'ArrowDown':
                        e.preventDefault();
                        targetIndex = (index + 1) % statCards.length;
                        statCards[targetIndex].focus();
                        break;
                    case 'ArrowLeft':
                    case 'ArrowUp':
